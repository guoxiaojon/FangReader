<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/avatar_default"
        android:layout_marginEnd="10dp"
        android:id="@+id/iv_bookdetailcommunity_review_pic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_coffee"
        android:text="吾乃常山孙三炮"
        android:layout_toRightOf="@id/iv_bookdetailcommunity_review_pic"
        android:id="@+id/tv_bookdetailcommunity_review_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_coffee"
        android:text="lv.8"
        android:layout_toRightOf="@id/tv_bookdetailcommunity_review_name"
        android:id="@+id/tv_bookdetailcommunity_review_rank"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12小时前"
        android:textColor="@color/second_title"
        android:layout_alignParentEnd="true"
        android:id="@+id/tv_bookdetailcommunity_review_time"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/first_title"
        android:text="一本不错的小说"
        android:layout_below="@id/tv_bookdetailcommunity_review_name"
        android:layout_toRightOf="@id/iv_bookdetailcommunity_review_pic"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/tv_bookdetailcommunity_review_title"/>
    <RatingBar
        android:layout_below="@id/tv_bookdetailcommunity_review_title"
        android:layout_toRightOf="@id/iv_bookdetailcommunity_review_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:rating="1"
        android:stepSize="1"
        android:id="@+id/rb_bookdetailcommunity_review_bar"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/second_title"
        android:id="@+id/tv_bookdetailcommunity_review_content"
        android:text="要是特种兵的梦想··············································"
        android:layout_toRightOf="@id/iv_bookdetailcommunity_review_pic"
        android:layout_below="@id/rb_bookdetailcommunity_review_bar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_bookdetailcommunity_review_pic"
        android:layout_below="@id/tv_bookdetailcommunity_review_content"
        android:text="45"
        android:drawablePadding="3dp"
        android:id="@+id/tv_bookdetailcommunity_review_like"
        android:textColor="@color/second_title"
        android:drawableLeft="@mipmap/post_item_like"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/tv_bookdetailcommunity_review_like"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/second_title"/>


</RelativeLayout>