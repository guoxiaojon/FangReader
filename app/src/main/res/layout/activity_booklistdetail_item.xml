<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@mipmap/cover_default"
            android:id="@+id/iv_booklistdetail_item_bookpic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_booklistdetail_item_bookpic"
            android:id="@+id/tv_booklistdetail_item_title"
            android:text="我欲封天"
            android:textSize="20sp"
            android:textColor="@color/first_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_booklistdetail_item_title"
            android:textColor="@color/second_title"
            android:layout_toRightOf="@id/iv_booklistdetail_item_bookpic"
            android:text="耳根"
            android:id="@+id/tv_booklistdetail_item_name"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/second_title"
            android:layout_below="@id/tv_booklistdetail_item_name"
            android:layout_toRightOf="@id/iv_booklistdetail_item_bookpic"
            android:text="223234人在追 | "
            android:id="@+id/tv_booklistdetail_item_subcount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/second_title"
            android:layout_below="@id/tv_booklistdetail_item_name"
            android:layout_toRightOf="@id/tv_booklistdetail_item_subcount"
            android:text="878万字 "
            android:id="@+id/tv_booklistdetail_item_wordcount"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/iv_booklistdetail_item_divideone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tv_booklistdetail_item_wordcount"
            android:background="@color/second_background"/>

        <ImageView
            android:layout_below="@id/iv_booklistdetail_item_divideone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_booklistdetail_item_quote"
            android:src="@mipmap/reader_ad_quote" />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/second_title"
            android:text="我若要有 \n天不可无"
            android:id="@+id/tv_booklistdetail_item_content"
            android:layout_below="@id/iv_booklistdetail_item_divideone"
            android:layout_toRightOf="@id/iv_booklistdetail_item_quote"/>




    </RelativeLayout>


</android.support.v7.widget.CardView>

